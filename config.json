{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/sms.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "REST Activity (Workflow API v1.1)",
      "description": "An example REST activity using workflow API v1.1 format."
    }
  },
  "arguments": {
      "execute": {
          "inArguments": [
        "nome": "{{Event.SendToAPI.Nome}}",
        "email": "{{Event.SendToAPIy.Email}}",
        "telefone": "{{Event.SendToAPI.Telefone}}"        
        ],
        "outArguments": [],
        "uri": "https://reqbin.com/echo/post/json",
        "verb": "POST",
        "body": "",
        "header": "",
        "format": "json",
        "useJwt": false,
        "timeout": 10000
      }
    },
  "configurationArguments": {
    "save": {
      "url": "https://reqbin.com/echo/post/json"
    },
    "publish": {
      "url": "https://reqbin.com/echo/post/json"
    },
    "validate": {
      "url": "https://reqbin.com/echo/post/json"
    },
    "stop": {
      "url": "https://reqbin.com/echo/post/json"
    }
  },
  "wizardSteps": [
    { "label": "Step 1", "key": "step1" },
    { "label": "Step 2", "key": "step2" },
    { "label": "Step 3", "key": "step3" },
    { "label": "Step 4", "key": "step4", "active": false }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 200,
      "width": 300,
      "fullscreen": true
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "phoneNumber": {
              "dataType": "Phone",
              "isNullable": false,
              "direction": "in"
            }
          },
          {
            "emailAddress": {
              "dataType": "Email",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "foundSignupDate": {
              "dataType": "Date",
              "direction": "out",
              "access": "visible"
            }
          }
        ]
      }
    }
  }
}