{
    "workflowApiVersion": "1.1",
    "metaData": {
      "icon": "images/icon_journeyBuilder-event-api-blue.svg",
      "category": "custom"
    },
    "type": "REST",
    "lang": {
      "pt-BR": {
        "name": "Enviar para API",
        "description": "Envia dados para uma API definida"
      }
    },
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "emailAddress": "{{InteractionDefaults.Email}}"
          },
          {
            "phoneNumber": "{{Contact.Default.PhoneNumber}}"
          }
        ],
        "outArguments": [
          {
            "foundSignupDate": ""
          }
        ],
        "url": "https://reqbin.com/echo/post/json"
      }
    },
    "configurationArguments": {
      "save": {
        "url": "URI/for/your/activity/save"
      },
      "publish": {
        "url": "URI/for/your/activity/publish"
      },
      "validate": {
        "url": "URI/for/your/activity/validate"
      },
      "stop": {
        "url": "URI/for/your/activity/stop"
      }
    },
    "wizardSteps": [
      { "label": "Step 1", "key": "step1" }
    ],
    "userInterfaces": {
      "configModal": {
        "height": 200,
        "width": 300,
        "fullscreen": true
      }
    },
    "schema": {
      "arguments": {
        "execute": {
          "inArguments": [
            {
              "phoneNumber": {
                "dataType": "Phone",
                "isNullable": false,
                "direction": "in"
              }
            },
            {
              "emailAddress": {
                "dataType": "Email",
                "isNullable": false,
                "direction": "in"
              }
            }
          ],
          "outArguments": [
            {
              "foundSignupDate": {
                "dataType": "Date",
                "direction": "out",
                "access": "visible"
              }
            }
          ]
        }
      }
    }
  }